{
  "name": "janus",
  "version": "0.2.10",
  "description": "Sika Education's LMS",
  "author": "Kyle Coberly <kyle.coberly@gmail.com>",
  "license": "Private",
  "private": true,
  "repository": "git@github.com:sikaeducation/janus.git",
  "homepage": "https://lms.sikaeducation.com",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "update:sika": "npm i @sikaeducation/ui@latest && npm i @sikaeducation/eslint-config@latest && npm i @sikaeducation/stylelint-config@latest",
    "lint": "npm run lint:ts && npm run lint:scss && npm run format",
    "lint:ts": "eslint --report-unused-disable-directives --ignore-path .gitignore --fix .",
    "lint:scss": "stylelint --fix **/*.scss",
    "format": "prettier . --write",
    "test": "npm run test:unit && npm run test:features",
    "test:ci": "npm run test:unit && ./static-server-test.sh",
    "test:unit": "vitest --run --dir src",
    "test:unit:watch": "vitest --watch --dir src",
    "test:features": "npx playwright test features/",
    "test:features:watch": "nodemon -L -x 'npm run test:features' -e ts"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.9.0",
    "@reduxjs/toolkit": "^1.9.1",
    "@sikaeducation/ui": "^1.0.0",
    "classnames": "^2.3.1",
    "eslint": "^8.3.0",
    "fs-extra": "^10.0.0",
    "nodemon": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.2.1",
    "sass": "^1.45.2",
    "socket.io-client": "^4.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.1",
    "@sikaeducation/eslint-config": "^3.1.3",
    "@sikaeducation/stylelint-config": "^1.1.3",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.49.0",
    "expect": "^29.3.1",
    "http-server": "^14.1.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
