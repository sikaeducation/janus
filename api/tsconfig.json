{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "types.d.ts",
    "slug.d.ts"
  ],
  "include": [ 
    "."
  ]
}
